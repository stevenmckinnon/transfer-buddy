{
  "compilerOptions": {
    "target": "ES2019",
    "module": "esnext",
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": [
      "ES2019",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "outDir": "./dist/",
    "preserveWatchOutput": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "types": [
      "react",
      "node"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": false,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "exclude": [
    "node_modules",
    "src/declaration.ts"
  ],
  "include": [
    "src"
  ]
}
